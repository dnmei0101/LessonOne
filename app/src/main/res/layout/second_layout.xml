<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Форма для сбора информации"
        android:textSize="25sp"
        android:textStyle="bold"
        />
    <CalendarView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/first_one"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text="Введите имя" />
    <EditText
        android:id="@+id/second_one"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="textPassword" />
    <EditText
        android:id="@+id/third_one"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="text"
        android:text="Введите вашу профессию"/>
    <EditText
        android:id="@+id/fourth_one"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:text="Введите e-mail"/>
    <EditText
        android:id="@+id/fifth_one"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="number"
        android:text="Введите номер"/>
    <EditText
        android:id="@+id/sixth_one"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="text"
        android:text="Комменатрий (необязательно)"/>
</LinearLayout>